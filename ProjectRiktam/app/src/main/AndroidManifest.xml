<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kanduri.projectriktam">

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/expense_manager_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity
            android:name=".HomeScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddScreen"
            android:label="@string/title_activity_add_expense"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".HomeScreen">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeScreen"></meta-data>
            </activity>

        <activity
            android:name=".GroupCreation"
            android:label="@string/title_activity_group_create"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeScreen">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".HomeScreen"></meta-data>
            </activity>

        <activity
            android:name=".AddMember"
            android:label="@string/title_activity_add_member"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeScreen">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".HomeScreen"></meta-data>
            </activity>

        <activity
            android:name=".SpendsScreen"
            android:label="@string/title_activity_spends_report"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeScreen">
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".HomeScreen"></meta-data>
        </activity>

        <activity
            android:name=".GroupReport"
            android:label="@string/title_activity_group_report"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeScreen">
        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value=".HomeScreen"></meta-data>
    </activity>

    </application>

</manifest>