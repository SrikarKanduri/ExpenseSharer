<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@drawable/custom_listview"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kanduri.projectriktam.HomeScreen"
    tools:showIn="@layout/app_bar_home_screen"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_group_title"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:id="@+id/list_groups"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector= "@drawable/custom_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
